{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Sid": "VisualEditor0",
          "Effect": "Allow",
          "Action": [
              "secretsmanager:GetResourcePolicy",
              "secretsmanager:GetSecretValue",
              "secretsmanager:DescribeSecret",
              "secretsmanager:ListSecretVersionIds",
              "secretsmanager:TagResource"
          ],
          "Resource": "arn:aws:secretsmanager:us-east-1:*:secret:*studio-feature-service*"
      },
      {
          "Sid": "VisualEditor1",
          "Effect": "Allow",
          "Action": "sqs:*",
          "Resource": "arn:aws:sqs:us-east-1:*:studio-configuration"
      },
      {
          "Sid": "VisualEditor2",
          "Effect": "Allow",
          "Action": [ 
              "kms:Decrypt",
              "kms:DescribeKey"
            ],
          "Resource" : "*",
          "Condition" : {
            "StringEquals" : {
              "kms:ViaService" : "secretsmanager.us-west-2.amazonaws.com"
            }
          }
        }
  ]
}